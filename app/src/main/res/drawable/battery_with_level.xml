<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom"
            >
            <shape android:shape="rectangle">
                <gradient
                    android:type="linear"
                    android:angle="90"
                    android:startColor="@color/battery_fill_bad"
                    android:centerColor="@color/battery_fill_avg"
                    android:endColor="@color/battery_fill_good"
                    />

                <stroke
                    android:width="@dimen/battery_stroke_width"
                    android:color="@color/battery_stroke" />
                <corners
                    android:bottomLeftRadius="@dimen/battery_stroke_corners"
                    android:topLeftRadius="@dimen/battery_stroke_corners"
                    android:bottomRightRadius="@dimen/battery_stroke_corners"
                    android:topRightRadius="@dimen/battery_stroke_corners"  />
            </shape>
        </clip>
    </item>




    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/battery_stroke_width"
                android:color="@color/battery_stroke" />
            <corners
                android:bottomLeftRadius="@dimen/battery_stroke_corners"
                android:topLeftRadius="@dimen/battery_stroke_corners"
                android:bottomRightRadius="@dimen/battery_stroke_corners"
                android:topRightRadius="@dimen/battery_stroke_corners" />
        </shape>
    </item>
</layer-list>